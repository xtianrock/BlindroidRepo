<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.ExtendedActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/extended_window_background</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/apptheme_btn_check_holo_light
        </item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:itemTextAppearance">@style/PopupMenu.recipe</item>
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/menu</item>
    </style>


    <style name="PopupMenu.recipe" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="MyApp.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#FF27AE60</item>
    </style>

</resources>
